{
  "name": "ucb-site-crypto",
  "version": "1.0.0",
  "description": "United Crypto Boys website - optimized for GitHub Pages",
  "scripts": {
    "optimize": "npm run minify-html && npm run minify-css && npm run minify-js && npm run optimize-session-storage",
    "minify-html": "html-minifier-terser index.html --collapse-whitespace --remove-comments --remove-optional-tags --remove-redundant-attributes --remove-script-type-attributes --remove-style-link-type-attributes --use-short-doctype --minify-css --minify-js -o index.min.html",
    "minify-css": "cleancss -o dist/viewer.min.css dist/viewer.css --level 2 --format beautify",
    "minify-js": "terser dist/viewer.js -o dist/viewer.min.js --compress --mangle --comments false",
    "optimize-session-storage": "terser js/session-storage.js -o js/session-storage.min.js --compress --mangle --comments false",
    "optimize-svg": "node optimize-svg.js",
    "optimize-lcp": "node optimize-lcp.js",
    "build": "npm run optimize && npm run optimize-svg && npm run optimize-lcp",
    "test:browsers": "playwright test",
    "test:lighthouse": "lhci autorun",
    "precommit": "npm run optimize",
    "deploy": "npm run build && git add -A && git commit -m 'perf++ PageSpeed optimization' && git push"
  },
  "devDependencies": {
    "@lhci/cli": "^0.12.0",
    "@playwright/test": "^1.40.0",
    "autoprefixer": "^10.4.16",
    "browserslist": "^4.22.2",
    "clean-css-cli": "^5.6.2",
    "cssnano": "^6.0.1",
    "html-minifier-terser": "^7.2.0",
    "imagemin": "^8.0.1",
    "imagemin-svgo": "^10.0.1",
    "postcss": "^8.4.32",
    "postcss-cli": "^10.1.0",
    "terser": "^5.24.0"
  },
  "browserslist": [
    "Chrome >= 120",
    "Firefox >= 130",
    "Safari >= 18",
    "Edge >= 120"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
